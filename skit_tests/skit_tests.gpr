with "config/skit_tests_config.gpr";
project Skit_Tests is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Skit_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("skit_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Skit_Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Skit_Tests;
